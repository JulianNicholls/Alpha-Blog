<%= form_for @article, html: { class: 'form-horizontal', role: 'form' } do |f| %>
  <div class="form-group">
    <%= f.label :title, class: 'col-sm-2 control-label' %>
    <div class="col-sm-8">
      <%= f.text_field :title, class: 'form-control', placeholder: 'Title of Article', autofocus: true %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :description, class: 'col-sm-2 control-label' %>
    <div class="col-sm-8">
      <%= f.text_area :description, class: 'form-control', placeholder: 'Body of Article', rows: 8 %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-2 text-right">
      <strong>Categories</strong>
    </div>
    <div class="col-sm-8">
      <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %>
        <%= cb.label(class: 'checkbox-inline input_checkbox') {
            cb.check_box(class: 'checkbox form-control') + cb.text } %>
      <% end %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: 'btn btn-primary btn-lg' %>
    </div>
  </div>
<% end %>

<div class="row">
  <div class="col-xs-6 col-xs-offset-4">
    [ <%= link_to 'Cancel and Return to Articles', articles_path %> ]
  </div>
</div>
