<div class="page-header">
  <h1>Current Alpha Bloggers</h1>
</div>
<div class="text-center">
  <%= will_paginate %>
</div>

<% @users.each do |user| %>
  <ul class="listing">
    <div class="row">
      <div class="well col-md-4 col-md-offset-4 text-center">
        <li><%= link_to gravatar_for(user), user %></li>
        <li class="article-title">
          <%= link_to user.username, user %>
        </li>
        <li>
          <small>
            <%= pluralize(user.articles.count, 'article') if user.articles %>
          </small>
        </li>
      </div>
    </div>
  </ul>
<% end %>

<div class="text-center">
  <%= will_paginate %>
</div>
